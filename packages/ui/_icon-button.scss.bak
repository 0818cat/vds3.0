// 아이콘 버튼 스타일
// VDS 3.0 디자인 가이드라인 기준
// 색상과 인터랙션은 _button.scss의 스타일을 상속받습니다.


.btn.btn--icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0; // 명시성(0-0-2-0)으로 .btn--[size]의 padding(0-0-1-0) 덮어씀
    box-sizing: border-box;
    flex-shrink: 0;
    flex: 0 0 auto;
    align-self: center;
    min-width: 0 !important; // Loading 상태 등에서의 너비 강제 확장 방지(필수)
    overflow: hidden;


    // 크기 및 Radius (사용자 요청: L/M 8px, S 6px)
    &.btn--large {
        width: 48px;
        height: 48px;
        min-width: 0 !important; // 필수
        padding: 0;
        border-radius: 8px;

        svg,
        .btn__loading-animation {
            width: 24px;
            height: 24px;
        }
    }

    &.btn--medium {
        width: 40px;
        height: 40px;
        min-width: 0 !important; // 필수
        padding: 0;
        border-radius: 8px;

        svg,
        .btn__loading-animation {
            width: 20px;
            height: 20px;
        }
    }

    &.btn--small {
        width: 32px;
        height: 32px;
        min-width: 0 !important; // 필수
        padding: 0;
        border-radius: 6px;

        svg,
        .btn__loading-animation {
            width: 16px;
            height: 16px;
        }
    }
}
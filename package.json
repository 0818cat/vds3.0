{
  "name": "vds-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "sass --load-path=node_modules --load-path=packages packages/ui/components.scss packages/ui/dist/components.css && sass --load-path=node_modules --load-path=packages apps/showroom/showroom.scss apps/showroom/showroom.css",
    "dev": "sass --watch --load-path=node_modules --load-path=packages apps/showroom/showroom.scss:apps/showroom/showroom.css packages/ui/components.scss:packages/ui/dist/components.css",
    "dev:landing": "sass --watch --load-path=node_modules --load-path=packages apps/landing-page/landing.scss:apps/landing-page/landing.css"
  },
  "dependencies": {
    "lottie-web": "^5.13.0"
  },
  "devDependencies": {
    "sass": "^1.97.3"
  }
}